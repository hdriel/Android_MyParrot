<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/toy_layout"
    tools:context="myparrot.main.MainActivity"
    android:background="@drawable/background_blue_circle"
     >
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    
    <ToggleButton 
        android:id="@+id/toy_btn_gallery_gone"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_weight="2"
        android:textOff= "למידע נוסף"
        android:textOn= "החזר גלריה"
        />
    <Button 
        android:id="@+id/toy_btn_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_weight="1"
        android:text="מידע על משחקים לתוכי"
        android:visibility="gone"
        />
    <Button 
        android:id="@+id/toy_btn_info_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_weight="1"
        android:text="בניית משחקים לתוכי"
        android:visibility="gone"
        />
    <ScrollView 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="20"
	    android:padding="5dp"
	    >
        
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
    <TextView
        android:id="@+id/toy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toy_title"
        android:textSize="15sp" />

    </LinearLayout>
    </ScrollView>
    
    
</LinearLayout>

    <Gallery
        android:id="@+id/toy_gallery_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/toy_title_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אם בכל זאת אתה רוצה לפנק את התוכי שלך אז תוכל לראות (לקנות או להכין בעצמך) צעצועים לתוכים" />

    <ListView
        android:id="@+id/toy_activity_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
